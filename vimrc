" Enabling syntax highlighting
"syntax on

set tabstop=3
set shiftwidth=3
set smarttab
set et
set cin

set showmatch
set hlsearch
set incsearch
set ignorecase

set number
colorscheme peachpuff

" Insert Mappings
" imap 

" Comma is the leader for all the custon mappings
let mapleader = ','

"------------ Normal mode mappings ------------"
" Edit vimrc
nmap ,ev :tabedit ~/.vim/vimrc<cr>


